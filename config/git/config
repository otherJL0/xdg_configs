    ui = auto


[merge]
    tool = nvimMerge3
    conflictStyle = zdiff3

[mergetool]
    prompt = false
    keepBackup = false

[mergetool "nvimMerge3"]
    cmd = nvim -d -c \\"wincmd l\\" \\"$LOCAL\\" \\"$MERGED\\" \\"$REMOTE\\"

[diff]
    tool = nvimDiff
    algorithm = histogram
    colorMoved = default

[difftool]
    prompt = false
    keepBackup = false

[difftool "nvimDiff"]
    cmd = nvim -c "Gitsigns diffthis"

[pager]
    diff = delta
    log = delta
    reflow = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    line-numbers = true
