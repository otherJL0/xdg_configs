# vim:filetype=gitconfig
[user]
	name = Jonathan Lopez
    email = jonathanglopez@gmail.com
	signingkey = /home/jlopez/.ssh/id_ed25519.pub

[core]
    quotepath = true
    ; pager = diftastic
    editor = nvim
    commitGraph = true
    sparseCheckout = true
    sparseCheckoutCone = true
    symlinks = true
    filemode = false
    autocrlf = false

[color]
    ui = auto

[add.interactive]
    useBuiltin = true

[mergetool "fugitive"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[mergetool "diffview"]
    cmd = nvim -f -c \"DiffviewOpen\"

[merge]
    tool = diffview
    conflictStyle = zdiff3

[mergetool]
    prompt = false
    keepBackup = false

[diff]
    tool = difftastic
    algorithm = histogram
    colorMoved = default
    mnemonicPrefix = true
    relative = true

[difftool]
    prompt = false
    keepBackup = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"


[pager]
    difftool = true


[delta]
    line-numbers = true
    side-by-side = true
    navigate = true
    keep-plus-minus-markers = false
    commit-style = raw

[pull]
	rebase = true
    twohead = ort

[grep]
    lineNumber = true
    column = true
    patternType = perl
    threads = 4

[help]
	autocorrect = prompt

[push]
    default = current
    negotiate = true

[rebase]
    stat = true


[status]
    short = true
    branch = true
    relativePaths = false
    showStash = true
    submoduleSummary = true

[column]
    ui = column
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
    patch = add --patch
    unstage = reset HEAD --
    nuke = clean -fdx
    showtrackedignored = ls-files -i --exclude-standard
    me = !git log --author=\"$(git config user.name)\"
    f = fetch --all --prune
    ru = rebase origin/master
    c = commit -m
    tree = log --oneline --decorate --all --graph
    difft = difftool

[gpg]
	format = ssh
[scalar]
	repo = /Users/jolopez/git/voxsupFrontend2
