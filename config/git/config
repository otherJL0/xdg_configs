    email = jonathanglopez@gmail.com

[core]
    quotepath = true

[color]
    ui = auto

[merge]
    tool = nvimMerge3

[mergetool]
    prompt = false
    keepBackup = false

[mergetool "nvimMerge3"]
    cmd = nvim -d -c \\"wincmd l\\" \\"$LOCAL\\" \\"$MERGED\\" \\"$REMOTE\\"

[diff]
    tool = nvimDiff

[difftool]
    prompt = false
    keepBackup = false

[difftool "nvimDiff"]
    cmd = nvim -c "Gitsigns diffthis"

[pager]
    diff = delta
    log = delta
    reflow = delta
    show = delta

[delta]
    line-numbers = true
    side-by-side = true
    navigate = true

[interactive]
    diffFilter = delta --color-only
[pull]
	rebase = true
