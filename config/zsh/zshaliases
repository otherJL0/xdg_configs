# Oldie but a goodie
alias ls='ls --color=always'
alias ll='ls -la'
alias lR='ls -lR'

# Git
alias gs='git status'
alias gss='git status -s'
alias gc='git commit'
alias gcm='git commit -m'
alias gcM='git commit -am'
alias ga='git add'
alias gA='git add -A'
alias gl='git log'
alias gb='git branch'
alias gch='git checkout'
alias gph='git push'
alias gpl='git pull'

clang_version=14
for file in /usr/bin/{clang,ll{vm,db}}*-${clang_version};do
    versionless_alias=${${file:t}//-14/}
    alias $versionless_alias=${file}
done
